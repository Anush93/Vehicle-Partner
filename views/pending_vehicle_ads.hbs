                <label for="inputPassword2" class="sr-only">Message</label> 
                <textarea class="form-control" rows="2" id="comment"></textarea> 
                <button type="submit" class="btn btn-primary">Send the faults in this ad</button>
                </div>
            </form>   --}}
        </pre>
        {{/each}}
    </div>